{
  "name": "@ai-first-ds/core",
  "version": "0.1.0",
  "description": "AI-First Design System - Core Web Components",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "default": "./dist/components/*.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "lit": "^3.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "typescript": "^5.3.3",
    "vite": "^5.1.0"
  },
  "keywords": [
    "web-components",
    "lit",
    "ai",
    "design-system"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AishwaryShrivastav/AI-First-Design-System.git",
    "directory": "packages/core"
  },
  "license": "MIT"
}

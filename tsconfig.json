{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Web Components / Lit specific */
    "experimentalDecorators": true,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "ai-first-design-system": ["./packages/core/src"],
      "@ai-first-ds/tokens": ["./packages/tokens/src"],
      "@ai-first-ds/react": ["./packages/react/src"]
    }
  },
  "include": ["packages/*/src"],
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/tokens" },
    { "path": "./packages/react" }
  ]
}

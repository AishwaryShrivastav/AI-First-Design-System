{
  "name": "@ai-first-ds/root",
  "version": "0.1.0",
  "private": true,
  "description": "AI-First Design System - A comprehensive design system built for AI products",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/core",
    "build": "npm run build --workspaces --if-present",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "storybook": "npm run storybook --workspace=packages/storybook",
    "build-storybook": "npm run build-storybook --workspace=packages/storybook",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "npm run build && changeset publish",
    "prepare": "husky install",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@playwright/test": "^1.41.2",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.2.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/ui": "^1.3.1",
    "axe-playwright": "^1.2.3",
    "eslint": "^8.57.0",
    "husky": "^9.0.10",
    "jsdom": "27.2.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "vite-plugin-dts": "4.5.4",
    "vitest": "^4.0.13"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AishwaryShrivastav/AI-First-Design-System.git"
  },
  "keywords": [
    "design-system",
    "ai",
    "web-components",
    "lit",
    "tailwind",
    "ai-first",
    "ui-components",
    "accessibility",
    "react",
    "typescript"
  ],
  "author": "Aishwary Shrivastav <aishwaryshrivastava@gmail.com>",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
